<!--suppress XmlUnusedNamespaceDeclaration -->
<beans default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd"
       xmlns:aop="http://www.springframework.org/schema/aop">
    <bean id="baseAction"
          class="cn.edu.uestc.acmicpc.action.BaseAction"
          scope="prototype">
        <property name="userDAO" ref="userDAO"/>
        <property name="global" ref="global"/>
    </bean>
    <bean id="indexAction"
          class="cn.edu.uestc.acmicpc.action.index.IndexAction"
          parent="baseAction"
          scope="prototype">
    </bean>
    <bean id="testAction"
          class="cn.edu.uestc.acmicpc.action.test.TestAction"
          parent="baseAction"
          scope="prototype">
        <property name="tagDAO" ref="tagDAO"/>
    </bean>
    <bean id="registerAction"
          class="cn.edu.uestc.acmicpc.action.user.RegisterAction"
          parent="baseAction"
          scope="prototype">
    </bean>
    <bean id="loginAction"
          class="cn.edu.uestc.acmicpc.action.user.LoginAction"
          parent="baseAction"
          scope="prototype">
    </bean>
</beans>
