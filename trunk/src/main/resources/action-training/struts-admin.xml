<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="trainingAdmin" namespace="/training/admin" extends="default">
        <default-action-ref name="index"/>
        <action name="index" class="adminTrainingSystemIndexAction" method="toIndex">
            <result>/WEB-INF/views/training/admin/index.jsp</result>
        </action>
        <action name="user/search" class="adminTrainingUserAction" method="toMemberList"/>
        <action name="user/operator" class="adminTrainingUserAction" method="toOperatorTrainingUser"/>

        <action name="contest/index" class="adminTrainingContestAction" method="toIndex">
            <result>/WEB-INF/views/training/admin/trainingContest.jsp</result>
        </action>
        <action name="contest/search" class="adminTrainingContestAction" method="toSearchTrainingContest"/>
        <action name="contest/editor/*" class="adminTrainingContestAction" method="toContestEditor">
            <param name="targetTrainingContestId">{1}</param>
            <result>/WEB-INF/views/training/admin/trainingContestEditor.jsp</result>
        </action>
        <action name="contest/edit/*" class="adminTrainingContestEditorAction" method="toEditContest">
            <param name="targetTrainingContestId">{1}</param>
        </action>
        <action name="contest/uploadRank/*" class="adminTrainingContestEditorAction" method="uploadTrainingRankFile">
            <param name="targetTrainingContestId">{1}</param>
        </action>

    </package>
</struts>