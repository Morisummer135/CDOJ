<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="training" namespace="/training" extends="default">
        <default-action-ref name="index"/>
        <action name="index" class="trainingSystemIndexAction" method="toIndex">
            <result>/WEB-INF/views/training/index.jsp</result>
        </action>
        <action name="userHistory/*" class="trainingSystemIndexAction" method="toAllMemberHistory">
            <param name="userType">{1}</param>
        </action>

        <action name="user/search" class="trainingUserAction" method="toMemberList"/>
        <action name="register" class="trainingUserRegisterAction" method="toRegister"/>

        <action name="contest/search" class="trainingContestAction" method="toSearchTrainingContest"/>
        <action name="contest/show/*" class="trainingContestAction" method="toTrainingContest">
            <param name="targetTrainingContestId">{1}</param>
            <result>/WEB-INF/views/training/trainingContestPage.jsp</result>
        </action>

        <action name="user/show/*" class="trainingUserAction" method="toMemberPage">
            <param name="targetTrainingUserId">{1}</param>
            <result>/WEB-INF/views/training/trainingUserPage.jsp</result>
        </action>
        <action name="user/history/*" class="trainingUserAction" method="toMemberHistory">
            <param name="targetTrainingUserId">{1}</param>
        </action>
    </package>
</struts>