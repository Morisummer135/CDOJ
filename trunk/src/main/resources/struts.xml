<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <!-- route support -->
    <constant name="struts.action.extension" value=","/>
    <constant name="struts.enable.SlashesInActionNames" value="true"/>

    <!-- default package -->
    <package name="cdoj-default" extends="struts-default">
    </package>

    <package name="index" namespace="/" extends="cdoj-default">
        <default-action-ref name="index" />
        <action name="index" class="indexPageAction" method="toIndex">
            <result>/WEB-INF/views/index/indexPage.jsp</result>
        </action>
    </package>

    <package name="problemset" namespace="/problemset" extends="cdoj-default">
        <action name="page/*" class="problemListAction" method="toProblemList">
            <param name="pageId">{1}</param>
            <result>/WEB-INF/views/problem/problemList.jsp</result>
        </action>
        <action name="problem/*" class="problemAction" method="toShow">
            <param name="problemId">{1}</param>
            <result>/WEB-INF/views/problem/problemShow.jsp</result>
        </action>
        <action name="problem/*/submit" class="problemAction" method="toSubmit">
            <param name="problemId">{1}</param>
            <result>/WEB-INF/views/problem/problemSubmit.jsp</result>
        </action>
        <action name="problem/*/status" class="problemAction" method="toStatus">
            <param name="problemId">{1}</param>
            <result>/WEB-INF/views/problem/problemSubmit.jsp</result>
        </action>
        <action name="problem/*/discuss" class="problemAction" method="toDiscuss">
            <param name="problemId">{1}</param>
            <result>/WEB-INF/views/problem/problemSubmit.jsp</result>
        </action>
    </package>

    <package name="test" namespace="/test" extends="cdoj-default">
        <default-action-ref name="index"/>
        <action name="index" class="testSettings">
            <result>/WEB-INF/views/test/index.jsp</result>
        </action>
    </package>

</struts>
