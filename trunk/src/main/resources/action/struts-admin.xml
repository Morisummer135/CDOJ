<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="admin" namespace="/admin" extends="default">
        <action name="index" class="adminIndexAction" method="toIndex">
            <result>/WEB-INF/views/admin/index.jsp</result>
        </action>
    </package>

    <package name="userAdmin" namespace="/admin/user" extends="admin">
        <action name="list" class="userAdminAction" method="toUserList">
            <result>/WEB-INF/views/admin/user.jsp</result>
        </action>
        <action name="search" class="userAdminAction" method="toSearch"/>
        <action name="edit" class="userAdminAction" method="toEdit"/>
        <action name="operator" class="userAdminAction" method="toOperatorUser"/>
    </package>

    <package name="problemAdmin" namespace="/admin/problem" extends="admin">
        <action name="list" class="problemAdminAction" method="toProblemList">
            <result>/WEB-INF/views/admin/problem.jsp</result>
        </action>
        <action name="search" class="problemAdminAction" method="toSearch"/>
        <action name="edit" class="problemStatementAdminAction" method="toEdit"/>
        <action name="operator" class="problemAdminAction" method="toOperatorProblem"/>
        <action name="editor/*" class="problemAdminAction" method="toProblemEditor">
            <param name="targetProblemId">{1}</param>
            <result>/WEB-INF/views/admin/problemEditor.jsp</result>
        </action>

        <action name="data/*" class="problemDataAdminAction" method="toProblemDataEditor">
            <param name="targetProblemId">{1}</param>
            <result>/WEB-INF/views/admin/problemDataEditor.jsp</result>
        </action>
        <action name="uploadProblemDataFile/*" class="problemDataAdminAction" method="uploadProblemDataFile">
            <param name="targetProblemId">{1}</param>
        </action>
        <action name="updateProblemData/*" class="problemDataAdminAction" method="updateProblemData">
            <param name="targetProblemId">{1}</param>
        </action>

        <action name="uploadProblemPicture/*" class="problemPictureAdminAction" method="uploadPicture">
            <param name="targetProblemId">{1}</param>
        </action>
        <action name="getUploadedPictures/*" class="problemPictureAdminAction" method="toPictureList">
            <param name="targetProblemId">{1}</param>
        </action>
    </package>

    <package name="contestAdmin" namespace="/admin/contest" extends="admin">
        <action name="list" class="contestAdminAction" method="toContestList">
            <result>/WEB-INF/views/admin/contest.jsp</result>
        </action>
        <action name="search" class="contestAdminAction" method="toSearch"/>
        <action name="operator" class="contestAdminAction" method="toOperatorContest"/>
        <action name="editor/*" class="contestAdminAction" method="toContestEditor">
            <param name="targetContestId">{1}</param>
            <result>/WEB-INF/views/admin/contestEditor.jsp</result>
        </action>
        <action name="edit" class="contestStatementAdminAction" method="toEdit"/>
    </package>
</struts>