<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="appInterceptor"
                         class="cn.edu.uestc.acmicpc.interceptor.AppInterceptor"/>
            <interceptor-stack name="cdojCheckStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="appInterceptor"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="cdojCheckStack"/>
        <default-action-ref name="notFound"/>
        <global-results>
            <result name="error">/WEB-INF/views/error/error.jsp</result>
            <result name="redirect">/WEB-INF/views/master/redirect.jsp</result>
        </global-results>
        <action name="notFound" class="baseAction">
            <result>/WEB-INF/views/index/index.jsp</result>
        </action>
    </package>

    <!-- index package -->
    <package name="index" namespace="/" extends="default">
        <action name="index" class="indexAction" method="toIndex">
            <result>/WEB-INF/views/index/index.jsp</result>
        </action>
    </package>

    <!-- user package -->
    <package name="user" namespace="/user" extends="default">
        <action name="register" class="registerAction">
            <result name="success">/WEB-INF/views/user/registerSuccess.jsp</result>
            <result name="input">/WEB-INF/views/user/register.jsp</result>
        </action>
        <action name="login" class="loginAction" method="login"/>
    </package>

    <!-- test package -->
    <package name="test" namespace="/test" extends="default">
        <action name="test" class="testAction" method="toTest">
            <result>/WEB-INF/views/test/index.jsp</result>
        </action>
    </package>

</struts>
