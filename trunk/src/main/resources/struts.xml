<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="json-default">
        <interceptors>
            <interceptor name="appInterceptor"
                         class="cn.edu.uestc.acmicpc.oj.interceptor.AppInterceptor"/>
            <interceptor-stack name="cdojCheckStack">
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="appInterceptor"/>
                <interceptor-ref name="jsonValidationWorkflowStack"/>
            </interceptor-stack>
        </interceptors>
        <default-interceptor-ref name="cdojCheckStack"/>
        <default-action-ref name="notFound"/>
        <global-results>
            <result name="error">/WEB-INF/views/error/error.jsp</result>
            <result name="redirect">/WEB-INF/views/master/redirect.jsp</result>
            <result name="toIndex">/WEB-INF/views/index/index.jsp</result>
            <result name="input" type="json">
                <param name="root">
                    fieldErrors
                </param>
            </result>
            <result name="json" type="json">
                <param name="root">json</param>
            </result>
        </global-results>
        <action name="notFound" class="baseAction">
            <result>/WEB-INF/views/error/404.jsp</result>
        </action>
    </package>

    <include file="action/struts-problem.xml"/>
    <include file="action/struts-admin.xml"/>
    <include file="action/struts-index.xml"/>
    <include file="action/struts-user.xml"/>
    <include file="action/struts-test.xml"/>
    <include file="action/struts-status.xml"/>
    <include file="action/struts-contest.xml"/>
    <include file="action/struts-article.xml"/>

</struts>
