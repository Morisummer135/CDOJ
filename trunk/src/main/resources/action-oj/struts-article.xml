<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="article" namespace="/article" extends="default">
        <default-action-ref name="list"/>
        <action name="list" class="indexAction" method="toIndex">
            <result>/WEB-INF/views/index/index.jsp</result>
        </action>
        <action name="show/*" class="articleAction" method="toArticle">
            <param name="targetArticleId">{1}</param>
            <result>/WEB-INF/views/article/articleShow.jsp</result>
        </action>
    </package>
</struts>