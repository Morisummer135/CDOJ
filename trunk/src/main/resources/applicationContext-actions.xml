<!--suppress XmlUnusedNamespaceDeclaration -->
<beans default-lazy-init="true"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-3.1.xsd"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx">

    <bean id="baseAction"
          class="cn.edu.uestc.acmicpc.oj.action.BaseAction"
          scope="prototype">
        <property name="global" ref="global"/>
    </bean>

    <bean id="fileUploadAction"
          class="cn.edu.uestc.acmicpc.oj.action.file.FileUploadAction"
          parent="baseAction"
          scope="prototype">
    </bean>

    <import resource="action/applicationContext-actions-problem.xml"/>
    <import resource="action/applicationContext-actions-index.xml"/>
    <import resource="action/applicationContext-actions-test.xml"/>
    <import resource="action/applicationContext-actions-admin.xml"/>
    <import resource="action/applicationContext-actions-user.xml"/>
    <import resource="action/applicationContext-actions-status.xml"/>
    <import resource="action/applicationContext-actions-contest.xml"/>

</beans>
